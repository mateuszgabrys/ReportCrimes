@model IEnumerable<ReportCrimes.Web.Models.LawEnforcementDto>

<br />
<br />

<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-success">Law Enforcement List</h1>
        </div>
    </div>
    <div class="col text-end pt-1">
        <a asp-action="LawEnforcementCreate" class="btn btn-outline-success"><i class="fas fa-plus"></i>Create New Law Enforcement</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Rank Of Law Enforcement
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @item.RankOfLawEnforcement
                </td>
                <td>
                    <a asp-action="LawEnforcementEdit" class="btn btn-success" asp-route-lawId="@item.LawEnforcementId">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a asp-action="LawEnforcementDelete" class="btn btn-danger" asp-route-lawId="@item.LawEnforcementId">
                        <i class="fas fa-trash"></i>
                    </a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>