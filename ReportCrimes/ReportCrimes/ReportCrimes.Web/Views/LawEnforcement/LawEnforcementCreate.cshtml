@model ReportCrimes.Web.Models.LawEnforcementDto


<form asp-action="LawEnforcementCreate">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Create Law Enforcement</h1>

        <hr />
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-2">
                <label asp-for="RankOfLawEnforcement" class="control-label pt-2" style="font-size:20px;">Law Enforcement</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="RankOfLawEnforcement" class="form-control" />
                <span asp-validation-for="RankOfLawEnforcement" class="text-danger"></span>
            </div>
            <div class="col-5 offset-2">

                <a asp-action="LawEnforcementIndex" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Create" class="btn btn-info form-control" />

            </div>

        </div>

        <div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
