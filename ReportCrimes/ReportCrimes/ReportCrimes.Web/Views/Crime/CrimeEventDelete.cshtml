@model ReportCrimes.Web.Models.CrimeEventDto


<form asp-action="CrimeEventDelete">
    <input asp-for="CrimeId" hidden />
    <br />
    <div class="container border p-3">
        <h1 class="text-success">Delete Law Enforcement</h1>

        <hr />
        <div class="row">
            <div class="col-2">
                <label asp-for="DateOfEvent" class="control-label pt-2" style="font-size:20px;">Date</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="DateOfEvent" disabled class="form-control" />
            </div>
            <div class="col-2">
                <label asp-for="Description" class="control-label pt-2" style="font-size:20px;">Description</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Description" disabled class="form-control" />
            </div>
            <div class="col-2">
                <label asp-for="PlaceOfEvent" class="control-label pt-2" style="font-size:20px;">Place</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="PlaceOfEvent" disabled class="form-control" />
            </div>
            <div class="col-2">
                <label asp-for="ReportingPersonEmail" class="control-label pt-2" style="font-size:20px;">Email</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="ReportingPersonEmail" disabled class="form-control" />
            </div>
            <div class="col-2">
                <label asp-for="TypeOfEvent" class="control-label pt-2" style="font-size:20px;">Type</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="TypeOfEvent" disabled class="form-control" />
            </div>
            <div class="col-5 offset-2">

                <a asp-action="CrimeIndex" class="btn-secondary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />

            </div>

        </div>

        <div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
