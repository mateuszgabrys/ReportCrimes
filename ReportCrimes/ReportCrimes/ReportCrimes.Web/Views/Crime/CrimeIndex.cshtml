@model IEnumerable<ReportCrimes.Web.Models.CrimeEventDto>
<form>
    <div class="container row">

        @foreach (var item in Model)
        {


            <div class="col-4 ">
                <div class="p-0 my-3 border">
                    <div class="card">
                        <img src="/img/Crime.jpg" class="card-img-top">
                        <div class="card-body">
                            <h3 class="card-title text-success">@item.TypeOfEvent</h3>
                            <span class="badge badge-light mb-2 ">@item.Status</span>
                            <p class="card-text">@item.Description</p>
                            <div class="row">
                                <div class="col pt-1">
                                    <span style="font-size:23px;">@item.DateOfEvent</span>
                                </div>
                                <div class="col">
                                    <a asp-action="Details" asp-route-productId="@item.CrimeId" class="btn btn-success form-control">Details</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</form>
