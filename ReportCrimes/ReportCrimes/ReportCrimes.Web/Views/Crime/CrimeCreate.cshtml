@model ReportCrimes.Web.Models.CrimeEventDto


<form asp-action="CrimeCreate">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Create Law Enforcement</h1>

        <hr />
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-2">
                <label asp-for="TypeOfEvent" class="control-label pt-2" style="font-size:20px;">Type</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="TypeOfEvent" class="form-control" />
                <span asp-validation-for="TypeOfEvent" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="PlaceOfEvent" class="control-label pt-2" style="font-size:20px;">Place</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="PlaceOfEvent" class="form-control" />
                <span asp-validation-for="PlaceOfEvent" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="Description" class="control-label pt-2" style="font-size:20px;">Description</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="ReportingPersonEmail" class="control-label pt-2" style="font-size:20px;">Email</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="ReportingPersonEmail" class="form-control" />
                <span asp-validation-for="ReportingPersonEmail" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="Status" class="control-label pt-2" style="font-size:20px;">Status</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="col-5 offset-2">

                <a asp-action="CrimeIndex" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Create" class="btn btn-info form-control" />

            </div>

        </div>

        <div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
